package com.lec.ex2person_dtoDao;

import java.util.ArrayList;
import java.util.Scanner;

public class PersonMng {
	public static void main(String[] args) {
		PersonDao dao = PersonDao.getInsance();
		Scanner scanner = new Scanner(System.in);
		String fn;
		ArrayList<String> jobs = dao.jnameList();
		// System.out.println(jobs);
		do {
			System.out.print("1:입력 || 2:직업별출력 || 3:전체출력 || 그외:종료");
			fn = scanner.next();
			switch(fn) {
			case "1" :
				System.out.println("1번 기능");
				break;
			case "2" :
				System.out.println("2번 기능");
				break;
			case "3" :
				System.out.println("3번 기능");
			}
		}while(fn.equals("1") || fn.equals("2") || fn.equals("3"));
		System.out.println("BYE");
	}
}
